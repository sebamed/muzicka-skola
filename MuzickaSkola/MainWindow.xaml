                                </Border>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!-- END OF NOT SELECTED ITEM / ISPITANIK-->
            <!-- NOT SELECTED ITEM / ISPIT-->
            <Button>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <DockPanel Width="215" Cursor="Hand">
