<Window x:Name="MainFrame" x:Class="MuzickaSkola.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuzickaSkola"
        mc:Ignorable="d"
        Title="Muzicka Skola" Height="535" Width="862.308" Visibility="Visible" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Effect>
        <DropShadowEffect BlurRadius="20"/>
    </Window.Effect>
    <Window.Resources>
        <Storyboard x:Key="sbShowSidenav" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-150,0,0,0" To="0,0,0,0" DecelerationRatio=".7" Duration="0:0:1" />
        </Storyboard>
        <Storyboard x:Key="sbHideSidenav">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="-150,0,0,0" AccelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
    </Window.Resources>
    <Grid Background="#ffffff">

        <StackPanel x:Name="spSideNav" Margin="-150,0,0,0" Background="#2B303D" HorizontalAlignment="Left" Width="215">
            <!-- LOGO -->
            <DockPanel Background="#242631" Width="215">
                <DockPanel.Style>
                    <Style TargetType="{x:Type DockPanel}">
                        <Setter Property="Background" Value="#2B303D"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#242631"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>
                <Border Padding="0, 30" Width="161">
                    <Label Content="muzicka skola" FontWeight="Bold" Foreground="White" FontSize="18" HorizontalAlignment="Left" Width="141" Margin="10,0,0,0"/>
                </Border>
                <Border Padding="0, 10, 10, 10" HorizontalAlignment="Right">
                    <Border Padding="9">
                        <Button x:Name="btnCollapseMenu" Click="btnCollapseMenu_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center" >
                                        <Image x:Name="icons8_Xbox_Menu_50px_1_png" Height="25" Stretch="Fill" Width="25">
                                            <Image.Style>
                                                <Style TargetType="{x:Type Image}">
                                                    <Setter Property="Source" Value="Images/icons8_Xbox_Menu_50px_1.png"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Source" Value="Images/icons8_Xbox_Menu_50px_3.png"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>
                    </Border>
                </Border>
            </DockPanel>
            <!-- END OF LOGO -->
            <!-- SELECTED ITEM / HOME -->
            <Button>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <DockPanel Width="215" Cursor="Hand">
                            <DockPanel.Style>
                                <Style TargetType="{x:Type DockPanel}">
                                    <Setter Property="Background" Value="#2B303D"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#242631"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DockPanel.Style>
                            <Border Padding="10" HorizontalAlignment="Center" Width="148">
                                <Label Content="Pocetna" Foreground="White" FontSize="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" VerticalAlignment="Center" Margin="19,0,0,0"/>
